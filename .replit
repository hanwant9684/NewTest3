modules = ["web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cacert", "freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libuv", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[workflows]
runButton = "Bot Server"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Bot Server"

[[workflows.workflow]]
name = "Bot Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35807
externalPort = 3000

[[ports]]
localPort = 37053
externalPort = 4200

[[ports]]
localPort = 37933
externalPort = 3001

[[ports]]
localPort = 39691
externalPort = 3002

[[ports]]
localPort = 42019
externalPort = 5000

[[ports]]
localPort = 45005
externalPort = 3003

[deployment]
deploymentTarget = "vm"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "--workers", "1", "--threads", "4", "--worker-class", "gthread", "--timeout", "120", "server:app"]
